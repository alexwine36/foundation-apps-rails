<!doctype html>
<html lang="en" ng-app="app">
  <head>
    <base href="/">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Foundation Angular</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'build/routes', 'build/foundation', 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <zf-notification-set id="main-notifications"></zf-notification-set>
    <div class="grid-frame vertical">
      <div class="grid-content shrink" style="padding: 0;">
        <ul class="primary condense menu-bar">
          <li><a ui-sref="posts"><strong>Foundation for Apps</strong></a></li>
          <li ui-sref-active="is-active"><a ui-sref="posts">Posts</a></li>
        </ul>
      </div>
      <div class="grid-content">
        <div class="grid-container">
          <div ng-class="['ui-animation']" ui-view><%= yield %></div>
        </div>
      </div>
    </div>
  </body>
</html>
